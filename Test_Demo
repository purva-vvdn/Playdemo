const { chromium } = require('playwright');  // You can also use firefox or webkit

(async () => {
  // Launch the Chromium browser
  const browser = await chromium.launch({ headless: false });  // Visible browser (headless: true for invisible)
  
  // Open a new browser tab
  const page = await browser.newPage();
  
  // Navigate to google.com
  await page.goto('https://www.google.com');
  
  // Wait for the search input box to load
  await page.waitForSelector('input[name="q"]');
  
  // Print the title of the page to the console
  console.log("Page title: ", await page.title());
  
  // Wait for 5 seconds to observe the page
  await new Promise(resolve => setTimeout(resolve, 5000));
  
  // Close the browser
  await browser.close();
})
();
